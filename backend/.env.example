# Application
NODE_ENV=development
PORT=3001
SWAGGER_ENABLED=true

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/email_code_platform?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (must be replaced in production)
JWT_SECRET=your_jwt_secret_key_at_least_32_chars_long!!
JWT_EXPIRES_IN=7d
JWT_ADMIN_SECRET=your_admin_jwt_secret_at_least_32_chars!!
JWT_ADMIN_EXPIRES_IN=1d

# Default admin
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123456

# Upstream
GONGXI_BASE_URL=http://localhost:3000
GONGXI_API_KEY=sk_your_gongxi_api_key

# Pricing
DEFAULT_EMAIL_PRICE=0.10

# CORS (comma-separated in production)
# CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
